<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- Tribe -->

  <RulePackDef>
    <defName>NamerFactionMantisVillage</defName>
    <rulePack>
      <rulesStrings>
        <li>name->The [color] [politicalunion] for [MantisNames]</li>
        <li>name->[color] [negative] [MantisNames] </li>
        <li>name->[negative] [MantisAdj] [terrainfeature]</li>
        <li>name->The [MantisAdj] [terrainfeature] [MantisNames]</li>
        <li>name->The [color] [terrainfeature] [MantisNames]</li>
		<li>name->[MantisAdj] [MantisNames] [politicalunion]</li>
		<li>name->[MantisAdj] [terrainfeature] [politicalunion]</li>
		<li>name->[MantisAdj] [MantisName] [politicalunion]</li>
		<li>name->[MantisAdj] [MantisNames] [politicalunion]</li>
      </rulesStrings>
      <rulesRaw>
		<li Class="Rule_File">
          <keyword>politicalunion</keyword>
          <path>Words/Nouns/PoliticalUnions_Outlander</path>
        </li>
        <li Class="Rule_File">
          <keyword>terrainfeature</keyword>
          <path>Words/Nouns/TerrainFeatures</path>
        </li>
		<!-- adj -->
		<li Class="Rule_File">
          <keyword>color</keyword>
          <path>Words/Nouns/Colors</path>
        </li>
        <li Class="Rule_File">
          <keyword>negative</keyword>
          <path>Words/Nouns/Concepts_Badass</path>
        </li>
		<li Class="Rule_File">
          <keyword>MantisAdj</keyword>
          <path>MantisNames/MantisAdj</path>
        </li>
		<!-- noun -->
		<li Class="Rule_File">
          <keyword>MantisNames</keyword>
          <path>MantisNames/MantisNames</path>
        </li>

      </rulesRaw>
    </rulePack>
  </RulePackDef>

