<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ArtableFurnitureBase">
    <defName>LTF_YarnMaker</defName>
    <label>Thread spinning tool</label>
    <description>A place to shape yarns from manufactured or raw ressources.</description>
	
    <thingClass>Building_WorkTable</thingClass>
    <graphicData>
		<texPath>Things/Building/Slug/YarnMaker</texPath>
		<graphicClass>Graphic_Single</graphicClass>
		<drawSize>(1,1)</drawSize>
		<shadowData>
			<volume>(0.3, 0.6, 0.3)</volume>
		</shadowData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
	
    <statBases>
		<WorkToBuild>2000</WorkToBuild>
		<Mass>50</Mass>
		<MaxHitPoints>70</MaxHitPoints>
		<Flammability>1.2</Flammability>
		<WorkTableWorkSpeedFactor>0.5</WorkTableWorkSpeedFactor>
		<Cleanliness>-2</Cleanliness>
    </statBases>
	<minifiedDef>MinifiedFurniture</minifiedDef>
	
    <costList>
		<WoodLog>5</WoodLog>
		<Steel>5</Steel>
		<LTF_SlugDew>5</LTF_SlugDew>
    </costList>

	<costStuffCount>50</costStuffCount>
    <stuffCategories>
		<li>Metallic</li>
		<li>Woody</li>
    </stuffCategories>
	<surfaceType>Item</surfaceType>
	<researchPrerequisites><li>LTF_Research_Slug</li></researchPrerequisites>
	
	<scatterableOnMapGen>false</scatterableOnMapGen>
    <size>(1,1)</size>
    <designationCategory>Production</designationCategory>
    <passability>PassThroughOnly</passability>
	<pathCost>50</pathCost>
	<fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
	
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>

    <inspectorTabs>
		<li>ITab_Bills</li>
    </inspectorTabs>

	<comps>
		<li Class="CompProperties_AffectedByFacilities">
			<linkableFacilities>
				<li>ToolCabinet</li>
			</linkableFacilities>
		</li>
	</comps>
	
	<placeWorkers>
		<li>PlaceWorker_ShowFacilitiesConnections</li>
	</placeWorkers>
</ThingDef>
  
